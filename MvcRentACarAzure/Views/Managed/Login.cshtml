@await Html.PartialAsync("_ErrorModal")
<div class="container">
	<div class="card my-4">
		<div class="card-header">
			<h1>Iniciar Sesión</h1>
		</div>
		<div class="card-body">
			<form method="post">
				<div class="row mb-3">
					<div class="col-md-6 input-group">
						<label for="email" class="form-label input-group-text">Email:</label>
						<input type="text" id="email" name="email" class="form-control" />
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-md-6 input-group">
						<label for="password" class="form-label input-group-text">Contraseña:</label>
						<input type="password" id="password" name="password" class="form-control" />
					</div>
				</div>
				<div class="row p-3 mb-3">
					<button type="submit" class="btn btn-primary mr-4">Iniciar Sesión</button>
					<a asp-action="Register" asp-controller="Managed" class="btn btn-secondary">Regístrate</a>
				</div>
			</form>
			@* <h3 style="color:red">@ViewData["mensaje"]</h3> *@
		</div>
	</div>
</div>
@section Scripts {
	<script>
		$(document).ready(function() {
			if ($('#errorModal').length) {
				$('#errorModal').modal('show');
			}
		});
	</script>
}